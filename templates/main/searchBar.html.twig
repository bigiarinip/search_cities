{% extends 'base.html.twig' %}

{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
	<div class="wrapper">
		<div class="search-input">
			<input id="textfield" type="text" placeholder="Type to search..">
			<div id="suggestions" class="suggestion-box"></div>
			<div class="icon">
				<i class="fas fa-search"></i>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script src="{{ asset('js/smartSearch.js') }}" type="text/javascript"></script>
{% endblock %}